    <link rel="shortcut icon" type="image/png" href="/img/favicon.ico" />

    
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">


</head>

<body>
    <div class="container">
        <br>
        <div class="row">
            <div class="col md-8">
                <h2><span class="username">{{user.name}}'s</span> QuickLinks</h2>    
                
            </div>
            <div class="col md-2 offset-2">
                    <button type="button" class="btn mr-2 btn-outline-danger btn-sm float-right">Logout</button>
                    <button type="button" class="btn mr-2 btn-outline-success btn-sm float-right" data-toggle="modal" data-target="#exampleModal">Add</button>
                
            </div>
            
        </div>
        <hr>
        
        
        <div class="row content">
            <div class="col-md-12 ">
                <div class="card-columns">
                    {{#each quickLinks}}
                    <div class="card  shadow p-3 mb-3 bg-white rounded">
                        {{#if this.headerImage}}
                        <img class="card-img-top" src="{{this.headerImage}}" alt="Card image cap">
                        {{/if}}
                        <div class="card-body">
                            <h4 class="card-title">{{this.name}}</h3>
                                <hr>
                                <p class="card-text">{{this.description}}</p>
                                <hr>
                                
                                    <a href="{{this.link}}" target="_blank" class="card-button btn btn-brand btn-outline-info btn-sm float-left">
                                        <img height="22" width="22" class="rounded-circle" src="{{this.link}}/favicon.ico"
                                            onerror=this.src="/img/noimage.ico"><span> Launch</span>
                                    </a>
                                    <button type="button" class=" card-button btn btn-brand btn-outline-danger btn-sm float-right">
                                        <img height="18" width="20" src="/img/delete.svg" alt=""> Delete
                                    </button>
                                    
                                
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>




        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered " role="document">
